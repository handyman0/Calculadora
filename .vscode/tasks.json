{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Calculadora GTK",
            "type": "shell",
            "command": "gcc",
            "args": [
                "CalculadoraemC.c",
                "-o",
                "calculadora",
                "`pkg-config",
                "--cflags",
                "--libs",
                "gtk+-3.0`",
                "-I/usr/include/gtk-3.0"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc arquivo de build ativo",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarefa gerada pelo Depurador."
        }
    ]
}